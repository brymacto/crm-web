<% if @notification != nil && @notification.downcase == "deleted" %>
  <p class="notification_msg">Contact ID <%= @notification_id %> has been successfully deleted. <a href="/contacts"><i class="fa fa-times"></i></a></p>
<% end %>

<% if @notification != nil && @notification.downcase == "added" %>
  <p class="notification_msg">Contact ID <%= @notification_id %> has been successfully added. <a href="/contacts"><i class="fa fa-times"></i></a></p>
<% end %>

<% if @notification != nil && @notification.downcase == "edited" %>
  <p class="notification_msg">Contact ID <%= @notification_id %> has been successfully edited. <a href="/contacts"><i class="fa fa-times"></i></a></p>
<% end %>

<table>
  <tr>
    <th>ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Actions</th>

  </tr>
  <% @contacts.each do |contact| %>

  <tr>
    <td>
      <a href="/contacts/<%= contact.id %>"><%= contact.id %></a>
    </td>
    <td>
      <%= contact.first_name %>
    </td>
    <td>
      <%= contact.last_name %>
    </td>
    <td>
    <a href="mailto:<%= contact.email %>"><%= contact.email %></a>
    </td>
    <td>
      <a href="/contacts/<%= contact.id %>"><i class="fa fa-ellipsis-h"></i></a>
      <a href="/contacts/<%= contact.id %>/edit"><i class="fa fa-pencil fa-fw"></i></a>
      <a href="javascript:{}" onclick="document.getElementById('delete_form_<%= contact.id %>').submit(); return false;"><i class="fa fa-trash"></i></a>
    </td>
  </tr>

<form action="/contacts/<%= contact.id %>" method="post" id="delete_form_<%= contact.id %>" style="display:none">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="Delete Contact" value="Delete contact" style="display:none">
</form>

  <% end %>


</table>

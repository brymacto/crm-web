<table>
  <tr><th>ID</th><td><%= @contact.id %></td></tr>
  <tr><th>First Name</th><td><%= @contact.first_name %></td></tr>
  <tr><th>Last Name</th><td><%= @contact.last_name %></td></tr>
  <tr><th>Email</th><td><%= @contact.email %></td></tr>
  <tr><th>Notes</th><td><%= @contact.notes %></td></tr>
  <tr><th>Actions</th><td><a href="/contacts/<%= @contact.id %>/edit"><i class="fa fa-pencil fa-fw"></i></a></td></tr>

</table>
<form action="/contacts/<%= @contact.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="Delete Contact" value="Delete contact">
</form>

<ul>
  <li><a href="/contacts/<%= @contact.id %>/edit">Edit this contact</a></li>
  <li><a href="/contacts">Back to view all contacts</a></li>
</ul>
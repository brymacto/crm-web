<form action="/contacts/<%= @contact.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <div>First name: <input type="text" name="first_name" value="<%= @contact.first_name %>"></div>
  <div>Last name: <input type="text" name="last_name" value="<%= @contact.last_name %>"></div>
  <div>Email: <input type="text" name="email" value="<%= @contact.email %>"></div>
  <div>Note: <input type="text" name="notes" value="<%= @contact.notes %>"></div>
  <div><input type="submit" name="Submit" id="submit"></div>
</form>

<a href="/contacts">< Back to view all contacts</a>